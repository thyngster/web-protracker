{
  "name": "chip-player",
  "version": "1.0.0",
  "description": "A standalone Amiga MOD music player library",
  "type": "module",
  "main": "./dist-lib/chip-player.umd.js",
  "module": "./dist-lib/chip-player.es.js",
  "types": "./dist-lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist-lib/chip-player.es.js",
      "require": "./dist-lib/chip-player.umd.js",
      "types": "./dist-lib/index.d.ts"
    }
  },
  "files": [
    "dist-lib"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:lib": "vite build --mode lib && tsc --project tsconfig.lib.json",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vue-tsc": "^2.2.0"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^6.0.3",
    "vue": "^3.5.26"
  }
}
